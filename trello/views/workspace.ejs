<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Workspace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/workspace.css">
</head>
<body>
    <h1><%= board.title %></h1>
    <div class="d-flex flex-row align-items-start">
        <div class="list">
            <h4>ToDo</h4>
            <% for (todo of board.todoList) { %>
                <div cmanOMat="move" class="field">
                    <%= todo %>
                </div>
            <% } %>
            <button id="plus_btn" class="btn_base"><span class="dli-plus"></span>カードを追加</button>
            <form id="card_form" action="/home/<%= board._id %>" method="POST" class="nothing align-middle">
                <input class="form-control" id="component" type="text" name="todo[component]" required>
                <div class="invalid-feedback">
                    any value!
                </div>
                <button type="submit" class="btn btn-success mt-2">追加する</button>
                <button type="reset" id="back_btn" class="btn_base"><span class="dli-close"></span></button>
            </form>
        </div>
        <div class="list">
            <h4>作業中</h4>
            <% for (work of board.workList) { %>
                <div cmanOMat="move" class="field">
                    <%= work %>
                </div>
            <% } %>
            <button id="plus_btn" class="btn_base"><span class="dli-plus"></span>カードを追加</button>
            <form id="card_form" action="/home/<%= board._id %>" method="POST" class="nothing align-middle">
                <input class="form-control" id="component" type="text" name="work[component]" required>
                <div class="invalid-feedback">
                    any value!
                </div>
                <button type="submit" class="btn btn-success mt-2">追加する</button>
                <button type="reset" id="back_btn" class="btn_base"><span class="dli-close"></span></button>
            </form>
        </div>
        <div class="list">
            <h4>完了</h4>
            <% for (end of board.endList) { %>
                <div cmanOMat="move" class="field">
                    <%= end %>
                </div>
            <% } %>
            <button id="plus_btn" class="btn_base"><span class="dli-plus"></span>カードを追加</button>
            <form id="card_form" action="/home/<%= board._id %>" method="POST" class="nothing align-middle">
                <input class="form-control"  id="component" type="text" name="end[component]" required>
                <div class="invalid-feedback">
                    any value!
                </div>
                <button type="submit" class="btn btn-success mt-2">追加する</button>
                <button type="reset" id="back_btn" class="btn_base"><span class="dli-close"></span></button>
            </form>
        </div>
    </div>
    <a href="/home">homeに戻る</a>

    <script src="/javascript/move.js"></script>
    <script src="/javascript/btn.js"></script>
</body>
</html>