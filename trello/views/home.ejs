<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/home.css">
</head>
<body>
    <div class="d-flex flex-row bd-highlight mt-4 ms-4">
        <button id="create_btn" class="btn btn-success col-3">creating boarding</button>
        <div id="input_board" class="board nothing col-3">
            <h1>creating boarding</h1>
            <h5>ボード名を入力してください</h5>
            <form action="/home" method="POST">
                <input id="board_name" name="board_name" type="text" placeholder="ボード名">
                <button id="back_btn" class="btn btn-primary" type="button">戻る</button>
                <button class="btn btn-primary">登録する</button>
            </form>
        </div>
        <div class="boardList col-3">
            <div class="d-block">
                <% for (let board of boards) { %>
                    <form action="/home/<%= board._id %>" method="GET"> 
                        <button id="get_board" class="btn btn-success"><%= board.title %></button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
   
    <script>
        let btn = document.getElementById("create_btn")
        let back_btn = document.getElementById("back_btn")
        let ib = document.getElementById("input_board")
        console.log(btn)
        btn.addEventListener('click', () => {
            btn.classList.add("nothing")
            ib.classList.remove("nothing")
        })
        back_btn.addEventListener('click', () => {
            ib.classList.add("nothing")
            btn.classList.remove("nothing")
        })
    </script>
</body>
</html>